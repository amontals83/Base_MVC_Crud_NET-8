@model MVC_Crud_NET_8.Models.Contacto

@{
        ViewData["Title"] = "Detalle Contacto";
}

<h1 class="text-center">Contacto con .NEt 8</h1>

<div class="row">
        <div class="offset-12">
                <div class="card border">
                        <div class="card-header bg-dark">
                                <h3 class="text-white"><strong>Detalle Usuario</strong></h3>
                        </div>
                        <div class="card-body">
                                <ul class="list-group">
                                        <li class="list-group-item"><strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)</li>
                                        <li class="list-group-item"><strong>Edad: </strong>@Html.DisplayFor(m => m.Edad)</li>
                                        <li class="list-group-item"><strong>Teléfono: </strong>@Html.DisplayFor(m => m.Telefono)</li>
                                        <li class="list-group-item"><strong>Email: </strong>@Html.DisplayFor(m => m.Email)</li>
                                        <li class="list-group-item"><strong>Fecha: </strong>@Html.DisplayFor(m => m.FechaCreacion)</li>
                                </ul>
                                <a asp-controller="Inicio" asp-action="Index">Volver</a>
                        </div>
                </div>
        </div>
</div>