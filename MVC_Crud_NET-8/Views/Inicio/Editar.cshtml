@model MVC_Crud_NET_8.Models.Contacto

@{
        ViewData["Title"] = "Editar Contacto";
}

<h1 class="text-center">Contacto con .NEt 8</h1>

<div class="row">
        <div class="offset-12">
                <div class="card border">
                        <div class="card-header bg-dark">
                                <h3 class="text-white"><strong>Editar Usuario</strong></h3>
                        </div>
                        <div class="card-body">

                                <form asp-action="Editar" method="POST">

                                        <!-- // Id del usuario como campo oculto -->
                                        <input type="hidden" asp-for="Id" />

                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                                <label asp-for="Nombre" class="control-label"></label>
                                                <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" />
                                                <span asp-validation-for="Nombre" class="text-danger"></span>

                                                <label asp-for="Edad" class="control-label"></label>
                                                <input asp-for="Edad" class="form-control" placeholder="Ingresa la edad" />
                                                <span asp-validation-for="Edad" class="text-danger"></span>

                                                <label asp-for="Telefono" class="control-label"></label>
                                                <input asp-for="Telefono" class="form-control" placeholder="Ingresa el teléfono" />
                                                <span asp-validation-for="Telefono" class="text-danger"></span>

                                                <label asp-for="Email" class="control-label"></label>
                                                <input asp-for="Email" class="form-control" placeholder="Ingresa el email" />
                                                <span asp-validation-for="Email" class="text-danger"></span>

                                                <div class="form-group mt-3">
                                                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa-solid fa-user"></i> Editar Usuario</button>
                                                </div>
                                        </div>
                                </form>

                                <a asp-controller="Inicio" asp-action="Index">Volver</a>
                        </div>
                </div>
        </div>
</div>